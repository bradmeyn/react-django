{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/lib/components/*"],
      "@contexts/*": ["./src/lib/contexts/*"],
      "@hooks/*": ["./src/lib/hooks/*"],
      "@utils/*": ["./src/lib/utils/*"],
      "@schemas/*": ["./src/lib/schemas/*"],
      "@services/*": ["./src/lib/services/*"]
    }
  }
}
